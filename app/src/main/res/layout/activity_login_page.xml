<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#000000"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kunj.scope.LoginPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/scope1"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:inputType="phone"
        style="@style/MyEditText"
        android:id="@+id/login_name_et"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/MyEditText"
        android:hint="Password"
        android:inputType="textPassword"
        android:id="@+id/login_pass_et"/>
    <Button
        style="@style/MyEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:background="#02c4cc"
        android:id="@+id/login_btn"/>

    <CheckBox
        style="@style/MyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        android:id="@+id/chechbox"
        android:checked="false"
        android:duplicateParentState="false" />


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_marginTop="5dp"
            style="@style/MyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgotten your login details?" />
        <TextView

            android:textColor="#02c4cc"
            android:text="Get help with signing in."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_forgotpass_tv"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            style="@style/MyEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?" />
        <TextView
            style="@style/MyEditText"
            android:textColor="#02c4cc"
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_signup_tv"/>
    </LinearLayout>

</LinearLayout>
